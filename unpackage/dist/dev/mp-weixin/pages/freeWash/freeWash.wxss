.red {
  color: red;
}
.gray {
  color: #7F7F7F;
}
.box {
  margin: 20rpx 14rpx;
}
.box .head > .title {
  border-bottom: 1px solid #A6A6A6;
  padding-bottom: 16rpx;
  font-size: 36rpx;
}
.box .appointment {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.box .appointment input {
  border: 1px solid #7F7F7F;
  height: 70rpx;
  line-height: 70rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-radius: 10rpx;
  margin-top: 26rpx;
}
.box .appointment .gray {
  margin-top: 60rpx;
  font-size: 34rpx;
}
.box .appointment > .title {
  margin-top: 14rpx;
  color: #A6A6A6;
}
.box .btn {
  background-color: #FD8F33;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 100rpx;
  border-radius: 10rpx;
}

